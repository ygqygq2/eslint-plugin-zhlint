{
  "name": "@ygqygq2/eslint-plugin-zhlint",
  "version": "2.0.0",
  "description": "ESLint plugin for Chinese typographies (中文排版) with zhlint",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "zhlint"
  ],
  "author": "ygqygq2 <ygqygq2@qq.com>",
  "main": "lib/index.js",
  "files": [
    "lib/**/*.js"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext src/**/*.ts",
    "test": "mocha src/tests --recursive"
  },
  "dependencies": {
    "@typescript-eslint/experimental-utils": "^5.55.0",
    "@ygqygq2/eslint-plugin-zhlint": "link:/data/git/ygqygq2/eslint-plugin-zhlint",
    "requireindex": "~1.2.0",
    "zhlint": "^0.7.1",
    "eslint": "^8.36.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.21.2",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "lint-staged": "^13.2.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.4",
    "simple-git-hooks": "^2.8.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^5.0.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "pnpm run lint",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "preserveUnused": true
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "license": "MIT"
}
